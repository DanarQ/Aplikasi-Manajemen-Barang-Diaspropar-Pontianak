<Window x:Class="ManajemenBarang.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManajemenBarang"
        mc:Ignorable="d"
        Title="Aplikasi Manajemen Barang" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Background="#1976D2" Grid.Row="0" Padding="20">
            <TextBlock Text="APLIKASI MANAJEMEN BARANG" 
                       FontSize="26" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Form Panel -->
            <Border Grid.Column="0" Background="#E3F2FD" CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Form Input Data Barang" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,20" 
                               Grid.Row="0"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="No ID Barang" Margin="0,0,0,10"/>
                            <TextBox x:Name="txtIdBarang" Margin="0,0,0,20" Padding="8"/>

                            <TextBlock Text="Nama Barang" Margin="0,0,0,10"/>
                            <TextBox x:Name="txtNamaBarang" Margin="0,0,0,20" Padding="8"/>

                            <TextBlock Text="Merek Barang" Margin="0,0,0,10"/>
                            <TextBox x:Name="txtMerekBarang" Margin="0,0,0,20" Padding="8"/>

                            <TextBlock Text="Harga Barang" Margin="0,0,0,10"/>
                            <TextBox x:Name="txtHargaBarang" Margin="0,0,0,20" Padding="8"
                                     LostFocus="TxtHargaBarang_LostFocus"
                                     GotFocus="TxtHargaBarang_GotFocus"/>

                            <TextBlock Text="Tanggal Peminjaman" Margin="0,0,0,10"/>
                            <DatePicker x:Name="dpTanggalPinjam" Margin="0,0,0,20"/>

                            <TextBlock Text="Nama Pengguna" Margin="0,0,0,10"/>
                            <TextBox x:Name="txtNamaPengguna" Margin="0,0,0,20" Padding="8"/>

                            <TextBlock Text="Keterangan Barang" Margin="0,0,0,10"/>
                            <TextBox x:Name="txtKeteranganBarang" Margin="0,0,0,20" Padding="8" 
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="btnBaru" Content="Baru" Width="110" Height="40" 
                                Background="#1E88E5" Foreground="White" Margin="0,0,15,0"
                                Click="BtnBaru_Click"/>
                        <Button x:Name="btnSimpan" Content="Simpan" Width="110" Height="40" 
                                Background="#43A047" Foreground="White" Margin="0,0,15,0"
                                Click="BtnSimpan_Click"/>
                        <Button x:Name="btnHapus" Content="Hapus" Width="110" Height="40" 
                                Background="#E53935" Foreground="White"
                                Click="BtnHapus_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Data Grid Panel -->
            <Border Grid.Column="2" Background="#E3F2FD" CornerRadius="8" Padding="20" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Daftar Barang" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,20"
                               Grid.Row="0"/>

                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtCari" Grid.Column="0" Padding="8" Margin="0,0,15,0" 
                                 TextChanged="TxtCari_TextChanged"/>
                        <Button x:Name="btnCari" Content="Cari" Grid.Column="1" Width="90" Height="35" 
                                Background="#1976D2" Foreground="White"
                                Click="BtnCari_Click"/>
                    </Grid>

                    <DataGrid x:Name="dgBarang" 
                              Grid.Row="2" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionChanged="DgBarang_SelectionChanged"
                              BorderThickness="1"
                              BorderBrush="#B0BEC5"
                              Background="White"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="All"
                              AlternatingRowBackground="#CFD8DC">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="No ID" Binding="{Binding IdBarang}" Width="100"/>
                            <DataGridTextColumn Header="Nama Barang" Binding="{Binding NamaBarang}" Width="150"/>
                            <DataGridTextColumn Header="Merek" Binding="{Binding MerekBarang}" Width="120"/>
                            <DataGridTextColumn Header="Harga" Binding="{Binding HargaBarang, StringFormat=C}" Width="120"/>
                            <DataGridTextColumn Header="Tanggal Pinjam" Binding="{Binding TanggalPinjam, StringFormat='{}{0:dd/MM/yyyy}'}" Width="120"/>
                            <DataGridTextColumn Header="Pengguna" Binding="{Binding NamaPengguna}" Width="150"/>
                            <DataGridTextColumn Header="Keterangan" Binding="{Binding KeteranganBarang}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
